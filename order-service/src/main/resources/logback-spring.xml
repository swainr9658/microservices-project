<configuration>

    <appender name="CLOUDWATCH"
              class="com.github.danielwegener.logback.cloudwatch.CloudWatchAppender">

        <logGroup>microservices-logs</logGroup>
        <logStream>${spring.application.name}</logStream>
        <region>us-east-1</region>

        <layout>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger - %msg%n</pattern>
        </layout>

    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CLOUDWATCH"/>
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>